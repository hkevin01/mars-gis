# Environment Configuration for MARS-GIS Platform

# Database Configuration
DATABASE_URL=postgresql://mars_user:mars_password@localhost:5432/mars_gis
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=mars_gis
DATABASE_USER=mars_user
DATABASE_PASSWORD=mars_password

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Application Configuration
SECRET_KEY=your-secret-key-change-in-production-very-important
DEBUG=true
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ORIGINS=http://localhost:3000,http://localhost:80

# API Configuration
API_VERSION=v1
API_PREFIX=/api/v1
API_PORT=8000
API_HOST=0.0.0.0

# Frontend Configuration
REACT_APP_API_URL=http://localhost:8000/api/v1
REACT_APP_WS_URL=ws://localhost:8000/ws
REACT_APP_ENVIRONMENT=development

# Security Configuration
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DELTA=3600
REFRESH_TOKEN_EXPIRATION_DELTA=86400

# External Services
NASA_API_KEY=your-nasa-api-key
USGS_API_KEY=your-usgs-api-key
MARS_DATA_API_KEY=your-mars-data-api-key

# File Storage
UPLOAD_FOLDER=./data/uploads
MAX_UPLOAD_SIZE=100MB
ALLOWED_EXTENSIONS=jpg,jpeg,png,tiff,geotiff,shp,kml,kmz,json,csv

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=./logs/mars_gis.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Celery Configuration (Background Tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_TIMEZONE=UTC

# ML/AI Configuration
PYTORCH_DEVICE=cuda  # or 'cpu' if no GPU available
MODEL_CACHE_DIR=./models/cache
TRAINING_DATA_DIR=./data/training
MODEL_CHECKPOINT_DIR=./models/checkpoints

# Monitoring Configuration
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Development Configuration
HOT_RELOAD=true
AUTO_MIGRATION=true
SEED_DATABASE=true
DEBUG_TOOLBAR=true

# Production Configuration (override in production)
# DEBUG=false
# ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com
# SECRET_KEY=your-production-secret-key
# DATABASE_URL=postgresql://prod_user:prod_password@prod_host:5432/mars_gis_prod
# REDIS_URL=redis://prod_redis:6379/0

# Docker Configuration
COMPOSE_PROJECT_NAME=mars-gis
COMPOSE_FILE=docker-compose.yml

# Kubernetes Configuration
KUBE_NAMESPACE=mars-gis
KUBE_CONTEXT=mars-gis-cluster

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_STORAGE_PATH=./backups

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=MARS-GIS <noreply@mars-gis.com>

# Geospatial Configuration
GDAL_DATA=/usr/share/gdal
PROJ_LIB=/usr/share/proj
MARS_PROJ4=+proj=longlat +a=3396190 +b=3376200 +no_defs
DEFAULT_MARS_SRID=49900

# Cache Configuration
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=3600
CACHE_KEY_PREFIX=mars_gis_
TILE_CACHE_DIR=./cache/tiles
TILE_CACHE_SIZE_MB=1000

# WebSocket Configuration
WS_ENABLED=true
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=1000
WS_COMPRESSION_ENABLED=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# Feature Flags
ENABLE_3D_VISUALIZATION=true
ENABLE_AI_ANALYSIS=true
ENABLE_MISSION_PLANNING=true
ENABLE_REAL_TIME_UPDATES=true
ENABLE_USER_REGISTRATION=false  # Set to true to allow new user registrations
